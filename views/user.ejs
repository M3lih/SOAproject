<div class="container">
   <div class="row">
      <div class="col-md-12">
         <div class="text_align_center">

            <% if (!inFollowers) { %>
            <a style="margin: 20px auto;" class="read_more" href="/users/<%= user._id %>/follow?_method=PUT" >Takip Et</a>
            <% } else { %> 
            <a style="margin: 20px auto;" class="read_more" href="/users/<%= user._id %>/unfollow?_method=PUT" >Takipten Çık</a>
            <% }%>  
         </div>
      </div>
   </div>
</div>


  <div class="gallery">
    <div class="container_with">
       <div class="row">
          <div class="col-md-12">
             <div class="titlepage text_align_center">
                <h2>Fotoğraflarım</h2>
             </div>
          </div>
       </div>
       <div class="tz-gallery">
                <div class="row">


                   <% for (photo of photos) { %>
                   <div class="col-lg-4 col-md-6 ma_bottom30">
                      <div class="lightbox">
                         <img src="<%= photo.url %>" alt="<%= photo.name %>">
                         <div class="view_main">
                           <div class="pose">
                           <a class="read_more" href="/photos/<%= photo._id %>"><img src="/images/ga.png" alt="#"/></a>
                           <h3 style="padding-top:10px; padding-bottom:10px" >
                            <%= photo.name %>
                         </h3>
                         <p style="padding: top 10px;"> 
                         <%= photo.description.substring(0,80)+"..." %>
                         </p>
                         
                         </div>
                         </div>
                      </div>
                   </div> 
                
                <% } %>

          </div>
       </div>
    </div>
 </div>








  

